log "$irdistleft" "$drivendist" "$odoth"
followline "bm" @v 0.15 :($irdistleft < .17 )
stop
fwd .5 @v 1.5 @a .1
stop 

turn 90
theta = $odoth + 5
fwd .2 @v .1
stop
followwall "left" .2 @v 0.1 :($irdistleft > .4 )
label "turnLoop"
turn -1
if ($odoth > theta) "turnLoop"
fwd .4 @v 0.1
stop
turn 90 @v 0.1
stop
fwd .6 @v 1.5 @a .1
stop
turn 90 @v .1
stop
fwd .3 @v 0.1
stop
followwall "left" .2  @v 0.1 :($irdistleft > .4 )
stop
fwd .45 @v 0.1
stop
turn 90 @v .1
stop
followline "bm" @v 0.15 :($drivendist > .6 )
